# ============================================
# ENVIRONMENT SETTINGS
# ============================================
# Environment: development, staging, production
NODE_ENV=development

# Debug mode (true/false)
DEBUG=false

# API rate limiting (requests per minute)
RATE_LIMIT=60

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# Enable/disable features
ENABLE_STRIPE_PAYMENTS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_REVIEWS=true
ENABLE_ANALYTICS=false

# ============================================
# THIRD PARTY INTEGRATIONS (Optional)
# ============================================
# Google Analytics
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# Google Calendar API (for calendar integration)
# GOOGLE_CLIENT_ID=xxxxxxxxxxxx.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxx

# Zoom Integration (for virtual events)
# ZOOM_API_KEY=xxxxxxxxxxxxxxxxxxxx
# ZOOM_API_SECRET=xxxxxxxxxxxxxxxxxxxx

# ============================================
# SECURITY SETTINGS
# ============================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8888,https://covetalks.netlify.app

# Session secret (for cookie signing if used)
SESSION_SECRET=another_random_secret_string_here

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Lockout duration in minutes
LOCKOUT_DURATION=15

# ============================================
# DATABASE SETTINGS (Airtable specific)
# ============================================
# Airtable API rate limit (requests per second)
AIRTABLE_RATE_LIMIT=5

# Airtable request timeout (ms)
AIRTABLE_TIMEOUT=30000

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Local development port
DEV_PORT=8888

# Mock mode (bypass real API calls)
MOCK_MODE=false

# Verbose logging
VERBOSE_LOGGING=false

# ============================================
# NOTES
# ============================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env to version control
# 3. Set these same variables in Netlify Dashboard > Site Settings > Environment Variables
# 4. Use test keys for development, live keys for production
# 5. Regenerate all keys if any are compromised
# 6. Keep this .env.example file updated with new variables